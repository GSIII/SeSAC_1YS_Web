<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form id="form_login">
        <fieldset>
            <legend>
                welcom
            </legend>
            아이디 <input type="text" name="id"><br>
            비밀번호 <input type="password" name="pwd">
            <div>
                <button type="button" onclick="login_user();">로그인</button>
            </div>
        </fieldset>
    </form>

    <script>
        function login_user() {
            var form = document.getElementById('form_login');
            axios({
                method: 'post',
                url: '/login',
                data: {
                    id: form.id.value,
                    password: form.pwd.value
                }
            })
            .then((response) => {
                return response.data
            })
            .then((data)=>{
                if (data.flag === false) {
                    alert('다시 로그인 해주세요')
                }
                else {
                    alert('로그인 성공')
                }
            })
        }
    </script>
</body>

</html>